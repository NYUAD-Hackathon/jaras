<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginBottom="30dp"
        android:background="@drawable/jaras_app"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <FrameLayout

        android:id="@+id/postext"
        android:layout_width="100dp"
        android:layout_height="360dp"
        android:background="#E0E0E0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's Happening Now"
                    android:textSize="15dp"
                    android:textColor="#424242"
                    android:layout_margin="10dp"
                    android:layout_weight="0.9"/>

                <ImageButton
                    android:id="@+id/closebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0"
                    android:src="@drawable/ic_close"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <EditText
                android:id="@+id/titleaction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white_bg"
                android:hint="Story title"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/postwindow"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white_bg"
                android:hint="Enter your story ..."
                android:paddingTop="8dp"
                android:paddingBottom="150dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload photo"
                    android:background="@drawable/round_white_bg"
                    android:textColor="#BDBDBD"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="120dp"
                    android:layout_weight="0.9"/>

                <Button
                    android:id="@+id/ringbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ring"
                    android:background="@drawable/round_pirp_bg"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>



